  <hr class="w-50" />

  <form id="formReg">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input id="emailData" class="form-control m-auto" disabled value={{email}} />
